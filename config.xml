<?xml version='1.3' encoding='utf-8'?>
<widget id="my.edu.hjuapp" version="1.5.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Han Chiang App</name>
    <description>
        Onsen version - App for Hanchiang for accessing news, calendar, timetable and exam results.
    </description>
    <author email="paulchin@hju.edu.my" href="http://hju.edu.my">
        Paul
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="16" />
        <allow-intent href="market:*" />
    </platform>
    
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-targetSdkVersion" value="28" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
   
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin spec="https://github.com/ti8m/DocumentHandler.git" source="git" />

    <platform name="ios">
        <icon height="57" platform="ios" src="www/ios/icon.png" width="57" />
        <icon height="114" platform="ios" src="www/ios/icon@2x.png" width="114" />
        <icon height="40" platform="ios" src="www/ios/icon-40.png" width="40" />
        <icon height="80" platform="ios" src="www/ios/icon-40@2x.png" width="80" />
        <icon height="50" platform="ios" src="www/ios/icon-50.png" width="50" />
        <icon height="100" platform="ios" src="www/ios/icon-50@2x.png" width="100" />
        <icon height="60" platform="ios" src="www/ios/icon-60.png" width="60" />
        <icon height="120" platform="ios" src="www/ios/icon-60@2x.png" width="120" />
        <icon height="180" platform="ios" src="www/ios/icon-60@3x.png" width="180" />
        <icon height="72" platform="ios" src="www/ios/icon-72.png" width="72" />
        <icon height="144" platform="ios" src="www/ios/icon-72@2x.png" width="144" />
        <icon height="76" platform="ios" src="www/ios/icon-76.png" width="76" />
        <icon height="152" platform="ios" src="www/ios/icon-76@2x.png" width="152" />
        <icon height="29" platform="ios" src="www/ios/icon-small.png" width="29" />
        <icon height="58" platform="ios" src="www/ios/icon-small@2x.png" width="58" />
        <icon height="87" platform="ios" src="www/ios/icon-small@3x.png" width="87" />
        <icon height="1024" platform="ios" src="www/ios/icon1024.png" width="1024" />
        
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="orientation" value="portrait" />
    <preference name="phonegap-version" value="cli-7.1.0" />
    <icon src="icon1024.png" />
</widget>
